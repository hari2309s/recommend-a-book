{
  "name": "recommend-a-book",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:api": "cd apps/api && cargo run --bin recommend-a-book-api",
    "build": "turbo run build && cd apps/api && cargo build --release",
    "build:frontend": "turbo run build --filter=frontend",
    "build:api": "cd apps/api && cargo build --release",
    "start": "concurrently \"pnpm run start:api\" \"pnpm run start:frontend\"",
    "start:api": "cd apps/api && cargo run --bin recommend-a-book-api",
    "start:frontend": "cd apps/frontend && pnpm run build && pnpm run preview",
    "clean": "turbo run clean && rm -rf node_modules && cd apps/api && cargo clean",
    "clean:api": "cd apps/api && cargo clean",
    "clean:frontend": "turbo run clean --filter=@recommend-a-book/frontend",
    "lint": "turbo run lint",
    "lint:frontend": "turbo run lint --filter=@recommend-a-book/frontend",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json}\" --ignore-path .prettierignore",
    "setup": "pnpm install && cd apps/api && cargo fetch",
    "index:books": "cd apps/api && cargo run --bin index_books -- data/books.csv",
    "keepwarm:start": "chmod +x scripts/keep-warm/start-background.sh && ./scripts/keep-warm/start-background.sh",
    "keepwarm:status": "./scripts/keep-warm/start-background.sh --status",
    "keepwarm:stop": "./scripts/keep-warm/start-background.sh --stop",
    "keepwarm:logs": "tail -f scripts/keep-warm/logs/keep-warm.log",
    "keepwarm:once": "chmod +x scripts/keep-warm/keep-warm.sh && ./scripts/keep-warm/keep-warm.sh",
    "test:api": "chmod +x scripts/keep-warm/test-api.sh && ./scripts/keep-warm/test-api.sh"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "resolutions": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.4",
    "zod": "^4.0.17"
  }
}
