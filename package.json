{
  "name": "recommend-a-book",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=frontend",
    "dev:api": "turbo run dev --filter=api",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=frontend",
    "build:api": "cd apps/api && cargo build --release",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:api": "cd apps/api && cargo run --release",
    "start:frontend": "cd apps/frontend && npm run preview",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:api": "cd apps/api && cargo clean",
    "clean:frontend": "turbo run clean --filter=frontend",
    "lint": "eslint . --ext .ts --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{ts,tsx,js,json}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json}\" --ignore-path .prettierignore",
    "setup": "npm install && cd apps/api && cargo fetch"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "resolutions": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0"
  },
  "pnpm": {
    "overrides": {
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "@types/react": "^19.0.0",
      "@types/react-dom": "^19.0.0"
    },
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "~5.8.3",
    "wait-on": "^8.0.4",
    "zod": "^4.0.17"
  }
}
