# Recommend-a-Book API - Environment Variables Example
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit the .env file to version control!

# Server configuration
APP_HOST=127.0.0.1
APP_PORT=10000
RUN_MODE=development  # Options: development, production

# Database configuration
APP_DATABASE_URL=postgres://postgres:postgres@localhost:5432/books_dev

# Supabase configuration
APP_SUPABASE_URL=your_supabase_url_here
APP_SUPABASE_KEY=your_supabase_key_here

# Pinecone configuration
APP_PINECONE_API_KEY=your_pinecone_api_key_here
APP_PINECONE_ENV=your_pinecone_environment  # e.g., gcp-starter
APP_PINECONE_INDEX_NAME=your_pinecone_index_name

# HuggingFace configuration
APP_HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Logging configuration
RUST_LOG=info  # Options: error, warn, info, debug, trace
