{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "@/*": [
      "src/*"
    ],
    "@types/*": [
      "src/@types/*"
    ],
    "@config/*": [
      "src/config/*"
    ],
    "@controllers/*": [
      "src/controllers/*"
    ],
    "@models/*": [
      "src/models/*"
    ],
    "@services/*": [
      "src/services/*"
    ],
  }
}
