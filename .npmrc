# Enable pnpm's strict mode
strict-peer-dependencies=false

# Ensure all packages are hoisted to the root node_modules
shamefully-hoist=true

# Optimize for Vercel
prefer-offline=true
network-concurrency=1

# Disable scripts for security
ignore-scripts=true

# Use hoisted node_modules
node-linker=hoisted

target_platform=linux
target_arch=x64
optional=false
