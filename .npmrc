# Enable pnpm's strict mode
strict-peer-dependencies=false

# Ensure all packages are hoisted to the root node_modules
shamefully-hoist=true

# Use the latest pnpm store
node-linker=hoisted

# Disable scripts for security
ignore-scripts=true

# Set the package import method
dependency-checks=ignore-peer-dependencies

# Optimize for Vercel
prefer-offline=true
network-concurrency=1
